<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heavenlyhell.instamemo.Likes.LikesActivity">


    <RelativeLayout
        android:id="@+id/rlCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlShareAppBar"
        android:layout_marginBottom="@dimen/bottom_navigation">

        <include layout="@layout/layout_center_viewpager" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/layout_navigation_bottom_share" />
    </RelativeLayout>
</RelativeLayout>
